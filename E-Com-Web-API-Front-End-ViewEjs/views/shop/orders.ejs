<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (errorMessage) { %>
                <% errorMessage.forEach(ee => { %>
                <div class="user-message user-message--success"><%= ee %></div>
                <% }); %>
            <% } %>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul class="orders">
                    <% orders.slice().reverse().forEach(order => { %>
                        <li class="orders__item">
                            
                            <h1>Date of Order:  # <%= order.time %></h1>
                            <ul class="orders__products">
                                <li class="orders__products-item"> <h1>Transaction ID # <%= order.uniqueId %></h1></li>
                                <% order.products.forEach(p => { %>
                                    
                                    <li class="orders__products-item">Product Name: <%= p.product.title %> Quantity :<%= p.quantity %> Subtotal: <%= p.quantity*p.price %>  </li>
                                <% }); %>
                                <li class="orders__products-total">
                                    <h1>Total: <%= order.total %> TK</h1>
                                </li>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>